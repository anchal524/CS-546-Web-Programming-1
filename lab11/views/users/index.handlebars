<main>
    <h1>User login</h1>
    <form id="login-form" action="/login" method="POST" class="user-login-form">
        <label>Username
            <input
                type="text"
                id="username"
                name="username"
                placeholder="Enter username"
                value="{{username}}"
            />
        </label><br /><br />
        <label>Password
            <input
                type="password"
                id="password"
                name="password"
                placeholder="Enter password"
                value="{{password}}"
            />
        </label><br /><br />
        <button type="submit">Login</button>
        <button type="reset">Clear Form</button>
    </form>
    {{!-- {{#if hasErrors}}
        <ul class="error-list">
            {{#each errors}}
                <li>
                    {{this}}
                </li>
            {{/each}}
        </ul>
    {{/if}} --}}
    {{#if hasErrors}}
        <p class="error">{{errorMessage}}</p>
    {{/if}}
</main>
<div>
    <a href="/signup">Need to register? Click here to sign-up</a>
</div>